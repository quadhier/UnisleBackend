<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="models">

    <class name="Interests" table="interests">
        <id name="userID">
            <column name="name" sql-type="varchar" />
        </id>
        <property name="music">
            <column name="music" sql-type="varchar"/>
        </property>
        <property name="sport">
            <column name="sport" sql-type="varchar"/>
        </property>
        <property name="book">
            <column name="book" sql-type="varchar"/>
        </property>
        <property name="movie">
            <column name="movie" sql-type="varchar"/>
        </property>
        <property name="game">
            <column name="game" sql-type="varchar"/>
        </property>
    </class>
</hibernate-mapping>