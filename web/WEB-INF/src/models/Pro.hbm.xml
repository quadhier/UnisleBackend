<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="models">

    <class name="Pro" table="pro">
        <composite-id>
            <key-property name="userID" column="userid" type="varchar" />
            <key-property name="activityID" column="activityid" type = "varchar"/>
            <key-property name="publicDatetime" column="publicdatetime" type="date"/>
        </composite-id>
    </class>

</hibernate-mapping>