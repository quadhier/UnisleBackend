<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="models">

    <class name="BlackList" table="blacklist">
        <composite-id>
            <key-property name="coaction" column="coaction" type="varchar" />
            <key-property name="coactee" column="coactee" type = "varchar"/>
        </composite-id>

        <property name="createDatetime">
            <column name="createdatetime" sql-type="date"/>
        </property>
    </class>

</hibernate-mapping>