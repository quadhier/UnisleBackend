<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="models">

    <class name="ForwardedActivity" table="forwardedactivity">
        <id name="forwardedActivityID" >
            <column name="forwardedactivityid" sql-type="varchar"/>
        </id>

        <property name="originalActivityID">
            <column name="originalactivityid" sql-type="varchar"/>
        </property>

        <property name="forwardingUserID">
            <column name="forwardinguserid" sql-type="varchar"/>
        </property>

        <property name="forwardingDatetime">
            <column name="forwardingdatetime" sql-type="date"/>
        </property>
    </class>

</hibernate-mapping>