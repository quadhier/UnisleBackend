<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="models">
    <class name="User" table="uuser">
        <id name="userID">
            <column name="userid" sql-type="varchar"/>
        </id>
        <property name="password">
            <column name="password" sql-type="varchar" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar" not-null="true"/>
        </property>
        <property name="telephone">
            <column name="telephone" sql-type="integer" />
        </property>
        <property name="email">
            <column name="email" sql-type="varchar" />
        </property>
        <property name="sex">
            <column name="sex" sql-type="varchar" />
        </property>
        <property name="numNotice">
            <column name="numnotice" sql-type="integer" />
        </property>
        <property name="activityVisibility">
            <column name="activityvisibility" sql-type="integer" />
        </property>
        <property name="university">
            <column name="university" sql-type="varchar" />
        </property>
        <property name="department">
            <column name="department" sql-type="varchar" />
        </property>
        <property name="grade">
            <column name="grade" sql-type="varchar" />
        </property>
        <property name="hometown">
            <column name="hometown" sql-type="varchar" />
        </property>
        <property name="userPic">
            <column name="userpic" sql-type="varchar"/>
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="date" />
        </property>
        <property name="registerDatetime">
            <column name="registerdatetime" sql-type="date"/>
        </property>
    </class>
</hibernate-mapping>