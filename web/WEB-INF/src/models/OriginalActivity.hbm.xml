<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="models">

    <class name="OriginalActivity" table="originalactivity">
        <id name="originalActivityID">
            <column name="originalactivityid" sql-type="varchar" />
        </id>
        <property name="userID">
            <column name="userid" sql-type="varchar"/>
        </property>
        <property name="content">
            <column name="content" sql-type="varchar"/>
        </property>
        <property name="pros">
            <column name="pros" sql-type="integer"/>
        </property>
        <property name="attachment">
            <column name="attachment" sql-type="integer"/>
        </property>
        <property name="publicDatetime">
            <column name="publicdatetime" sql-type="date"/>
        </property>
    </class>
</hibernate-mapping>