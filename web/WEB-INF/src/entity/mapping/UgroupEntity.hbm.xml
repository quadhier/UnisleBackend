<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.UgroupEntity" table="ugroup" schema="public" catalog="Unisle">
        <id name="groupid">
            <column name="groupid" sql-type="varchar(30)" length="30"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="tag">
            <column name="tag" sql-type="varchar(100)" length="100" />
        </property>
        <property name="director">
            <column name="director" sql-type="varchar(30)" length="30" />
        </property>
        <property name="school">
            <column name="school" sql-type="varchar(30)" length="30" />
        </property>
        <property name="department">
            <column name="department" sql-type="varchar(30)" length="30" />
        </property>
        <property name="createdatetime">
            <column name="createdatetime" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="grouppic">
            <column name="grouppic" sql-type="bytea" />
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(300)" length="300" />
        </property>
        <property name="numnotice">
            <column name="numnotice" sql-type="smallint" />
        </property>
    </class>
</hibernate-mapping>