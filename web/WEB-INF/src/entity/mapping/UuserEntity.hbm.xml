<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.UuserEntity" table="uuser" schema="public" catalog="Unisle">
        <id name="userid">
            <column name="userid" sql-type="varchar(30)" length="30"/>

        </id>
        <property name="password">
            <column name="password" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="realname">
            <column name="realname" sql-type="varchar(30)" length="30" />
        </property>
        <property name="nickname">
            <column name="nickname" sql-type="varchar(30)" length="30" />
        </property>
        <property name="sex">
            <column name="sex" sql-type="vatchar(6)" />
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="timestamp" />
        </property>
        <property name="department">
            <column name="department" sql-type="varchar(30)" length="30" />
        </property>
        <property name="grade">
            <column name="grade" sql-type="varchar(10)" length="10" />
        </property>
        <property name="userpic">
            <column name="userpic" sql-type="bytea" />
        </property>
        <property name="hometown">
            <column name="hometown" sql-type="varchar(30)" length="30" />
        </property>
        <property name="telephone">
            <column name="telephone" sql-type="varchar(20)" length="20" />
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(20)" length="20" />
        </property>
        <property name="numnotice">
            <column name="numnotice" sql-type="smallint" />
        </property>
        <property name="activityvisibility">
            <column name="activityvisibility" sql-type="varchar(20)" default="friend" />
        </property>
        <property name="registerdatetime">
            <column name="registerdatetime" sql-type="timestamp" />
        </property>
        <property name="school">
            <column name="school" sql-type="varchar(30)" />
        </property>
        <property name="signature">
            <column name="signature" sql-type="varchar(100)" />
        </property>
        <property name="discription">
            <column name="discription" sql-type="varchar(300)" />
        </property>
        <property name="contactway">
            <column name="contactway" sql-type="varchar(20)" />
        </property>
    </class>
</hibernate-mapping>